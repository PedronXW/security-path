{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testTimeout": 180000,
    "testRegex": "e2e.spec.ts$",
    "preset": "@shelf/jest-dynamodb",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1",
      "test/(.*)": "<rootDir>/test/$1"
    },
    "setupFilesAfterEnv": [
      "./jest-setup.ts"
    ]
  }
  